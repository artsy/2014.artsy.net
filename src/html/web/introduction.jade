- introduction = locals.copy.web.sections.introduction

#frame-introduction.frame
  for image, i in introduction.images.reverse()
    //- Invert stacking order
    .frame--backdrop( id="introduction-backdrop-#{(introduction.images.length - 1) - i}" )
      img( src= imagePath(image, 'web/backdrops') )

  .frame--body
    for headline, i in introduction.headlines
      .frame--vcenter: .frame--vcenter-wrap
        .frame--headline.span-3( id="introduction-headline-#{i}" )!= headline

    for credit, i in introduction.credits
      .frame--credit( id="introduction-credit-#{i}" )
        != credit

  .intro-chevron &nbsp;
